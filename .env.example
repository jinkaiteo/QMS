# QMS Environment Configuration
# Phase 1: Development environment template

# Application Settings
APP_NAME="QMS Pharmaceutical System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
SECRET_KEY="your-secret-key-change-in-production"

# Database Configuration
POSTGRES_SERVER="localhost"
POSTGRES_USER="qms_user"
POSTGRES_PASSWORD="qms_dev_password"
POSTGRES_DB="qms_dev"
POSTGRES_PORT="5432"

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD="redis_dev_password"

# Celery Configuration
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# File Storage
UPLOAD_PATH="/app/uploads"
MAX_FILE_SIZE=104857600

# MinIO/S3 Configuration
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin123"
MINIO_BUCKET_NAME="qms-documents"
MINIO_SECURE=false

# Elasticsearch
ELASTICSEARCH_URL="http://localhost:9200"

# Email Configuration (optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=""
SMTP_USER=""
SMTP_PASSWORD=""
EMAILS_FROM_EMAIL=""
EMAILS_FROM_NAME=""

# Microsoft Entra ID (optional)
AZURE_AD_TENANT_ID=""
AZURE_AD_CLIENT_ID=""
AZURE_AD_CLIENT_SECRET=""

# Compliance Settings
CFR_21_PART_11_ENABLED=true
AUDIT_LOG_RETENTION_YEARS=7
PASSWORD_MIN_LENGTH=8
PASSWORD_COMPLEXITY_REQUIRED=true
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
SESSION_TIMEOUT_MINUTES=480

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL="DEBUG"

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=90
BACKUP_PATH="/app/backups"