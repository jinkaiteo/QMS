# Training Management System - Integrated Configuration
# Connect to existing QMS backend instead of mock API

# API Configuration - Use existing QMS backend
VITE_API_BASE_URL=http://localhost:8000/api

# Application Configuration
VITE_APP_NAME=QMS Training Management
VITE_APP_VERSION=3.0.0
VITE_ENVIRONMENT=integrated

# Features Configuration
VITE_ENABLE_TRAINING=true
VITE_ENABLE_EDMS_INTEGRATION=true
VITE_ENABLE_AUDIT_TRAIL=true

# Training Module Configuration
VITE_TRAINING_DEFAULT_PASSING_SCORE=70
VITE_TRAINING_DEFAULT_VALIDITY_PERIOD=12
VITE_TRAINING_MAX_ATTEMPTS=3

# Integration Settings
VITE_INTEGRATE_EXISTING_USERS=true
VITE_INTEGRATE_EXISTING_DEPARTMENTS=true
VITE_INTEGRATE_EXISTING_AUDIT=true

# Development Settings
VITE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false