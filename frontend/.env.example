# QMS Platform v3.0 - Frontend Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME=QMS Platform v3.0
VITE_APP_VERSION=3.0.0
VITE_APP_DESCRIPTION=Pharmaceutical Quality Management System

# Environment
NODE_ENV=development
VITE_NODE_ENV=development

# Authentication
VITE_JWT_SECRET=your-jwt-secret-key-here
VITE_SESSION_TIMEOUT=1800000

# Features
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# SSL/Security
VITE_ENABLE_HTTPS=false
VITE_SSL_CERT_PATH=/etc/nginx/ssl/qms.crt
VITE_SSL_KEY_PATH=/etc/nginx/ssl/qms.key

# Development
VITE_DEV_PORT=3001
VITE_DEV_HOST=0.0.0.0

# Production
VITE_PROD_PORT=3000
VITE_PROD_HTTPS_PORT=3443

# External Services
VITE_GRAFANA_URL=http://localhost:3000
VITE_PROMETHEUS_URL=http://localhost:9090
VITE_MINIO_CONSOLE_URL=http://localhost:9001

# Compliance
VITE_CFR_PART_11_ENABLED=true
VITE_EU_GMP_ENABLED=true
VITE_ISO_13485_ENABLED=true

# File Upload
VITE_MAX_FILE_SIZE=104857600
VITE_ALLOWED_FILE_TYPES=.pdf,.docx,.doc,.xlsx,.xls,.pptx,.txt,.rtf

# Monitoring
VITE_SENTRY_DSN=
VITE_ANALYTICS_ID=